{
	"name": "smol",
	"description": "Recursively re compresses directories with lzma2 compression",
	"authors": [
		"Matthew Brennan Jones <matthew.brennan.jones@gmail.com>"
	],
	"homepage": "https://github.com/workhorsy/smol",
	"copyright": "Copyright (c) 2021 Matthew Brennan Jones",
	"license": "BSL-1.0",
	"targetPath": "build",

	"configurations": [
		{
			"name": "default",
			"targetType": "executable",
			"targetName": "smol",
			"importPaths": ["source/"],
			"mainSourceFile": "source/main.d",
			"dependencies": {
				"dlib": "~>0.22.0",
				"natcmp": "~>1.3.2",
				"cbor-d": "~>0.5.5"
			}
		},
		{
			"name": "unittest",
			"targetType": "executable",
			"targetName": "smol_test",
			"importPaths": ["source/"],
			"excludedSourceFiles": ["source/main.d"],
			"mainSourceFile": "test/test.d",
			"dependencies": {
				"dlib": "~>0.22.0",
				"natcmp": "~>1.3.2",
				"cbor-d": "~>0.5.5",
				"bdd": "~>3.1.0"
			}
		}
	]
}
